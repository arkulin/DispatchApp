#:kivy 2.3.0

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 40
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.97, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            text: '‚úàÔ∏è Dispatcher App'
            font_size: '32sp'
            bold: True
            color: 0.2, 0.4, 0.8, 1
            size_hint_y: 0.3
        
        Button:
            text: 'Start Quiz'
            font_size: '20sp'
            bold: True
            background_normal: ''
            background_color: 0.2, 0.6, 0.9, 1
            size_hint_y: 0.2
            on_press: root.go_quiz()
        
        Button:
            text: 'Airport Info'
            font_size: '20sp'
            bold: True
            background_normal: ''
            background_color: 0.3, 0.7, 0.4, 1
            size_hint_y: 0.2
            on_press: root.go_airport()

<QuizIntroScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 15
        padding: 20
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.97, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            text: root.summary_text
            font_size: '22sp'
            bold: True
            color: 0.2, 0.4, 0.8, 1
            size_hint_y: 0.15
            text_size: self.width, None
            halign: 'center'
        
        BoxLayout:
            size_hint_y: 0.12
            spacing: 10
            Label:
                text: 'Module:'
                font_size: '18sp'
                size_hint_x: 0.35
            Spinner:
                id: module_spinner
                text: root.selected_module
                values: root.module_names
                font_size: '16sp'
                on_text: root.on_module_select(self.text)
        
        Label:
            text: 'Questions in module: ' + str(root.total_questions)
            font_size: '16sp'
            size_hint_y: 0.08
            text_size: self.width, None
            halign: 'center'
        
        BoxLayout:
            size_hint_y: 0.12
            spacing: 10
            Label:
                text: 'Number of questions:'
                font_size: '18sp'
                size_hint_x: 0.6
            TextInput:
                id: num_input
                input_filter: 'int'
                multiline: False
                font_size: '18sp'
                size_hint_x: 0.4
        
        Widget:
            size_hint_y: 0.2
        
        Button:
            text: 'Start Quiz'
            font_size: '20sp'
            bold: True
            size_hint_y: 0.12
            background_normal: ''
            background_color: 0.2, 0.7, 0.3, 1
            on_press: root.start_quiz()
        
        Button:
            text: 'Back to Home'
            font_size: '18sp'
            size_hint_y: 0.1
            background_normal: ''
            background_color: 0.6, 0.6, 0.6, 1
            on_press: root.go_home()

<QuizScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 15
        padding: 20
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.97, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            id: progress_label
            text: root.progress_text
            font_size: '16sp'
            size_hint_y: 0.06
            color: 0.4, 0.4, 0.4, 1
        
        ScrollView:
            size_hint_y: 0.25
            do_scroll_x: False
            do_scroll_y: True
            
            Label:
                id: question_label
                text: root.question_text
                font_size: '20sp'
                bold: True
                color: 0.1, 0.1, 0.1, 1
                size_hint_y: None
                height: self.texture_size[1] + 20
                text_size: self.width - 20, None
                padding: 10, 10
                halign: 'left'
                valign: 'top'
        
        ScrollView:
            id: options_scroll
            size_hint_y: 0.4
            do_scroll_x: False
            do_scroll_y: True
            
            BoxLayout:
                id: options_box
                orientation: 'vertical'
                spacing: 10
                size_hint_y: None
                height: self.minimum_height
                padding: 5
        
        Label:
            id: feedback_label
            text: root.feedback_text
            font_size: '18sp'
            bold: True
            size_hint_y: 0.08
            color: 0.2, 0.6, 0.2, 1
        
        BoxLayout:
            size_hint_y: 0.12
            spacing: 10
            Button:
                text: 'Check Answer'
                font_size: '18sp'
                bold: True
                background_normal: ''
                background_color: 0.2, 0.6, 0.9, 1
                on_press: root.check_answer()
            Button:
                id: next_button
                text: 'Next Question'
                font_size: '18sp'
                bold: True
                background_normal: ''
                background_color: 0.3, 0.7, 0.4, 1
                on_press: root.next_question()
        
        Button:
            text: 'Exit Quiz'
            font_size: '16sp'
            size_hint_y: 0.09
            background_normal: ''
            background_color: 0.8, 0.3, 0.3, 1
            on_press: root.go_home()

<AirportScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 15
        padding: 20
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.97, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            text: 'üõ´ Airport Information'
            font_size: '24sp'
            bold: True
            color: 0.2, 0.4, 0.8, 1
            size_hint_y: 0.1
        
        TextInput:
            id: input_icao
            size_hint_y: 0.08
            hint_text: 'Enter ICAO (e.g., LDZA)'
            font_size: '18sp'
            multiline: False
        
        Button:
            text: 'Search'
            font_size: '20sp'
            bold: True
            size_hint_y: 0.08
            background_normal: ''
            background_color: 0.2, 0.7, 0.3, 1
            on_press: root.search_airport()
        
        ScrollView:
            size_hint_y: 0.6
            do_scroll_x: False
            do_scroll_y: True
            
            Label:
                id: result_label
                text: 'Airport Info will appear here'
                font_size: '16sp'
                size_hint_y: None
                height: self.texture_size[1] + 20
                text_size: self.width - 20, None
                padding: 10, 10
                halign: 'left'
                valign: 'top'
        
        Button:
            text: 'Back to Home'
            font_size: '18sp'
            size_hint_y: 0.08
            background_normal: ''
            background_color: 0.6, 0.6, 0.6, 1
            on_press: root.go_home()

<QuizResultScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 30
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.97, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            text: root.title_text
            font_size: '28sp'
            bold: True
            color: 0.2, 0.4, 0.8, 1
            size_hint_y: 0.15
        
        ScrollView:
            size_hint_y: 0.7
            do_scroll_x: False
            do_scroll_y: True
            
            Label:
                id: result_label
                text: root.result_text
                font_size: '20sp'
                size_hint_y: None
                height: self.texture_size[1] + 20
                text_size: self.width - 40, None
                padding: 20, 10
                halign: 'center'
                valign: 'top'
        
        Button:
            text: 'Back to Home'
            font_size: '20sp'
            bold: True
            size_hint_y: 0.12
            background_normal: ''
            background_color: 0.2, 0.6, 0.9, 1
            on_press: root.go_home()
