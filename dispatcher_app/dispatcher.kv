#:kivy 2.0

<QuizIntroScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15
        canvas.before:
            Color:
                rgba: 0.95, 0.97, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        # Header
        BoxLayout:
            size_hint_y: 0.15
            canvas.before:
                Color:
                    rgba: 0.2, 0.4, 0.8, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15]
            Label:
                text: '‚úàÔ∏è Flight Dispatcher Quiz'
                font_size: '24sp'
                bold: True
                color: 1, 1, 1, 1
        
        # Module selection
        BoxLayout:
            size_hint_y: 0.2
            orientation: 'vertical'
            spacing: 10
            Label:
                text: 'Select Module:'
                font_size: '18sp'
                bold: True
                color: 0.2, 0.2, 0.2, 1
                size_hint_y: 0.3
            Spinner:
                id: module_spinner
                text: root.selected_module
                values: root.module_names
                font_size: '16sp'
                size_hint_y: 0.7
                on_text: root.on_module_select(self.text)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
        
        # Number of questions
        BoxLayout:
            size_hint_y: 0.15
            orientation: 'vertical'
            spacing: 10
            Label:
                text: f'Number of Questions (max {root.total_questions}):'
                font_size: '16sp'
                color: 0.2, 0.2, 0.2, 1
                size_hint_y: 0.4
            TextInput:
                id: num_input
                multiline: False
                input_filter: 'int'
                hint_text: 'Enter number'
                font_size: '16sp'
                size_hint_y: 0.6
                padding: [15, 15]
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
        
        Widget:
            size_hint_y: 0.2
        
        # Buttons
        BoxLayout:
            size_hint_y: 0.15
            spacing: 15
            Button:
                text: '‚Üê Back'
                font_size: '16sp'
                bold: True
                on_press: root.go_home()
                canvas.before:
                    Color:
                        rgba: 0.6, 0.6, 0.6, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
            Button:
                text: 'Start Quiz ‚Üí'
                font_size: '16sp'
                bold: True
                on_press: root.start_quiz()
                canvas.before:
                    Color:
                        rgba: 0.2, 0.7, 0.3, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]

<QuizScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15
        canvas.before:
            Color:
                rgba: 0.95, 0.97, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        # Progress header
        BoxLayout:
            size_hint_y: 0.1
            canvas.before:
                Color:
                    rgba: 0.2, 0.4, 0.8, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15]
            Label:
                text: root.progress_text
                font_size: '18sp'
                bold: True
                color: 1, 1, 1, 1
        
        # Question text
        ScrollView:
            size_hint_y: 0.3
            do_scroll_x: False
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]
            Label:
                id: question_label
                text: root.question_text
                font_size: '18sp'
                text_size: self.width - 40, None
                size_hint_y: None
                height: self.texture_size[1] + 40
                padding: [20, 20]
                color: 0.1, 0.1, 0.1, 1
                markup: True
        
        # Options
        BoxLayout:
            id: options_box
            orientation: 'vertical'
            size_hint_y: 0.45
            spacing: 10
        
        # Navigation
        BoxLayout:
            size_hint_y: 0.1
            spacing: 15
            Button:
                text: 'Quit'
                font_size: '16sp'
                bold: True
                on_press: root.quit_quiz()
                canvas.before:
                    Color:
                        rgba: 0.8, 0.2, 0.2, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
            Button:
                text: 'Next ‚Üí'
                font_size: '16sp'
                bold: True
                on_press: root.next_question()
                canvas.before:
                    Color:
                        rgba: 0.2, 0.7, 0.3, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]

<QuizResultScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        canvas.before:
            Color:
                rgba: 0.95, 0.97, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        # Header
        BoxLayout:
            size_hint_y: 0.15
            canvas.before:
                Color:
                    rgba: 0.2, 0.4, 0.8, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15]
            Label:
                text: 'üìä Quiz Results'
                font_size: '24sp'
                bold: True
                color: 1, 1, 1, 1
        
        # Results
        ScrollView:
            size_hint_y: 0.7
            do_scroll_x: False
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]
            Label:
                id: result_label
                text: root.result_text
                font_size: '16sp'
                text_size: self.width - 40, None
                size_hint_y: None
                height: self.texture_size[1] + 40
                padding: [20, 20]
                color: 0.1, 0.1, 0.1, 1
                markup: True
        
        # Button
        Button:
            text: 'Back to Home'
            font_size: '18sp'
            bold: True
            size_hint_y: 0.1
            on_press: root.go_home()
            canvas.before:
                Color:
                    rgba: 0.2, 0.7, 0.3, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]
